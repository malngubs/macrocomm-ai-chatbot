{
  "manifest_version": 3,
  "name": "Macrocomm Bubble",
  "version": "1.0.0",
  "description": "Injects Macrocomm chat bubble on any site.",
  "permissions": [],
  "host_permissions": [ "<all_urls>" ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  }
}

